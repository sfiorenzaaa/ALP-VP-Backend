{
  "info": {
    "name": "Pet API Tests",
    "description": "Collection for testing Pet API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/login",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Pet Management",
      "item": [
        {
          "name": "Create Pet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pou\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/pets",
              "host": ["{{base_url}}"],
              "path": ["api", "pets"]
            }
          }
        },
        {
          "name": "Get Pet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/pets",
              "host": ["{{base_url}}"],
              "path": ["api", "pets"]
            }
          }
        },
        {
          "name": "Update Pet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pou Updated\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/pets",
              "host": ["{{base_url}}"],
              "path": ["api", "pets"]
            }
          }
        }
      ]
    },
    {
      "name": "Activity Management",
      "item": [
        {
          "name": "Log Work Activity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"activityType\": \"WORK_TASK\",\n  \"description\": \"Mengerjakan tugas kalkulus\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/pets/activities",
              "host": ["{{base_url}}"],
              "path": ["api", "pets", "activities"]
            }
          }
        },
        {
          "name": "Log Rest Activity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"activityType\": \"REST_MEANINGFUL\",\n  \"description\": \"Tidur siang yang nyenyak\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/pets/activities",
              "host": ["{{base_url}}"],
              "path": ["api", "pets", "activities"]
            }
          }
        },
        {
          "name": "Get Activities",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/pets/activities",
              "host": ["{{base_url}}"],
              "path": ["api", "pets", "activities"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}