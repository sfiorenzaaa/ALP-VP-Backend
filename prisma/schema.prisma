generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum EventStatus {
  PENDING
  APPROVE
  REJECT
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  events   Event[]
  journals Journal[]
  joinedEvents Participant[]
}

model Event {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  eventDate   DateTime
  status      EventStatus
  createdAt   DateTime    @default(now())

  userId Int 
  user   User @relation(fields: [userId], references: [id]) 
  participants Participant[]
}

model Journal {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  content   String
  createdAt DateTime @default(now())
}

model Participant {
  userId    Int
  eventId   Int
  joinedAt  DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])

  @@id([userId, eventId])
}

model Song {
  id            Int    @id @default(autoincrement())
  clue          String @unique
  options       Json
  correctAnswer String
}
